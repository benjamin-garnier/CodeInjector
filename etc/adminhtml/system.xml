<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="codeinjector" translate="label" sortOrder="1000">
            <label>Ethos</label>
        </tab>
        <!--CodeInjector -->
        <section id="codeinjector" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>CodeInjector</label>
            <tab>codeinjector</tab>
            <resource>Ethos_CodeInjector::codeinjector</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Configuration</label>
                <field id="enable" translate="label comment" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Code injection</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="code" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Code to inject</label>
                    <comment>Insert the code you want to inject here.</comment>
                </field>
            </group>
        </section>
        <!--MODULE 2  -->
        <section id="altmodule" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Module 2</label>
            <tab>codeinjector</tab>
            <resource>Ethos_CodeInjector::codeinjector</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Configuration</label>
                <field id="enable" translate="label comment" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Code injection</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="position" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Where to inject</label>
                    <comment>It would be best to have a list of available positions, here... maybe v 2.0.0</comment>
                </field>
                <field id="code" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Code to inject</label>
                    <comment>Insert the code you want to inject here.</comment>
                </field>
            </group>
        </section>
    </system>
</config>